# .env.production.example - copy to .env and fill secrets
APP_NAME="Ulasis"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://ulasis.site

LOG_CHANNEL=stack
LOG_LEVEL=info

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=ulasis
DB_USERNAME=ulasis
DB_PASSWORD=change_me

BROADCAST_DRIVER=log
CACHE_DRIVER=file
QUEUE_CONNECTION=database
SESSION_DRIVER=file
SESSION_DOMAIN=.ulasis.site

FILESYSTEM_DRIVER=local

# Mail (example: Mailgun)
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailgun.org
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=admin@ulasis.site
MAIL_FROM_NAME="Ulasis"
MAIL_EHLO_DOMAIN=ulasis.site

# Other
VITE_APP_NAME="Ulasis"

# Optional: Redis
# REDIS_HOST=127.0.0.1
# REDIS_PASSWORD=null
# REDIS_PORT=6379

# APP_KEY: generate with `php artisan key:generate` after .env is in place
